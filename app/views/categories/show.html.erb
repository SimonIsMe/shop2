
  <div class="span3">
    <h5>Kategorie</h5>
    <ul class="nav nav-pills nav-stacked">
      <li>
        <%= link_to 'Strona główna', :root %>
      </li>
      <% @categories.each do |category| %>
          <li <%= (category.id == @category.id) ? 'class=active' : '' %>>
            <%= link_to category.name, category %>
          </li>
      <% end %>
  </div>
  <div class="span6">
    <h1><%= @category.name %></h1>

    <table class="table">
      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price / 100 %>zł</td>
            <td><%= link_to "Zobacz", product %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="span2">
    <%= render 'orders/template' %>
  </div>